// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  codingCourses  CodingCourse[]
  tradingCourses TradingCourse[]
  projects       Project[]
  tasks          Task[]
  fitnessLogs    FitnessLog[]
  trades         Trade[]
  reviews        Review[]
  settings       Settings[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
model CodingCourse {
  id          Int      @id @default(autoincrement())
  userId      String
  name        String
  description String?
  createdAt   DateTime @default(now())
  startDate   DateTime?
  targetDate  DateTime?

  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  modules CourseModule[]

  @@index([userId])
  @@index([createdAt])
}

model CourseModule {
  id          Int       @id @default(autoincrement())
  courseId    Int
  name        String
  order       Int
  completed   Boolean   @default(false)
  completedAt DateTime?

  course CodingCourse @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([completed])
}

model TradingCourse {
  id          Int      @id @default(autoincrement())
  userId      String
  name        String
  description String?
  createdAt   DateTime @default(now())
  startDate   DateTime?
  targetDate  DateTime?

  user    User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  modules TradingCourseModule[]

  @@index([userId])
  @@index([createdAt])
}

model TradingCourseModule {
  id          Int       @id @default(autoincrement())
  courseId    Int
  name        String
  order       Int
  completed   Boolean   @default(false)
  completedAt DateTime?

  course TradingCourse @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([completed])
}

enum ProjectStatus {
  active
  completed
  paused
}

model Project {
  id          Int           @id @default(autoincrement())
  userId      String
  name        String
  description String?
  status      ProjectStatus @default(active)
  startDate   DateTime?
  targetDate  DateTime?
  createdAt   DateTime      @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[]

  @@index([userId])
  @@index([status])
}

enum TaskType {
  DeepWork
  Gym
  TradingPractice
  Coding
  Review
  Other
}

model Task {
  id            Int       @id @default(autoincrement())
  userId        String
  title         String
  type          TaskType
  projectId     Int?
  completed     Boolean   @default(false)
  scheduledDate DateTime
  completedAt   DateTime?
  createdAt     DateTime  @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([scheduledDate])
  @@index([completed])
  @@index([type])
  @@index([projectId])
}

model FitnessLog {
  id          Int      @id @default(autoincrement())
  userId      String
  date        DateTime
  weight      Float?
  bodyFat     Float?
  waist       Float?
  calories    Int?
  workoutType String?
  notes       String?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model Trade {
  id        Int      @id @default(autoincrement())
  userId    String
  date      DateTime
  symbol    String
  setup     String
  entry     Float
  exit      Float
  quantity  Int
  pnl       Float
  emotion   String?
  notes     String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@index([symbol])
}

model Review {
  id            Int      @id @default(autoincrement())
  userId        String
  weekStartDate DateTime
  wins          String   @db.Text
  mistakes      String   @db.Text
  nextWeekGoals String   @db.Text
  metrics       Json?
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId])
  @@index([weekStartDate])
}

model Settings {
  id        Int      @id @default(autoincrement())
  userId    String
  key       String
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@index([userId])
}
