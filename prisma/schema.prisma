generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model CodingCourse {
  id           Int            @id @default(autoincrement())
  userId       String
  name         String
  description  String?
  projectId    Int?
  createdAt    DateTime       @default(now())
  startDate    DateTime?
  targetDate   DateTime?
  User         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  project      Project?       @relation(fields: [projectId], references: [id])
  modules      CourseModule[]

  @@index([createdAt])
  @@index([userId])
  @@index([projectId])
}

model CourseModule {
  id            Int          @id @default(autoincrement())
  courseId      Int
  name          String
  order         Int
  completed     Boolean      @default(false)
  completedAt   DateTime?
  scheduledDate DateTime?
  course        CodingCourse @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([completed])
  @@index([courseId])
  @@index([scheduledDate])
}

model FitnessLog {
  id          Int      @id @default(autoincrement())
  userId      String
  date        DateTime
  weight      Float?
  bodyFat     Float?
  waist       Float?
  calories    Int?
  workoutType String?
  notes       String?
  createdAt   DateTime @default(now())
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
  @@index([userId])
}

model Goal {
  id           Int        @id @default(autoincrement())
  userId       String
  name         String
  description  String?
  targetValue  Float
  currentValue Float      @default(0)
  startDate    DateTime?
  endDate      DateTime?
  status       GoalStatus @default(active)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime
  User         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([endDate])
  @@index([startDate])
  @@index([status])
  @@index([userId])
}

model Habit {
  id                 Int                  @id @default(autoincrement())
  userId             String
  name               String
  frequency          HabitFrequency       @default(daily)
  customDays         Json?
  targetCount        Int                  @default(1)
  startDate          DateTime?
  endDate            DateTime?
  status             HabitStatus          @default(active)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime
  icon               String?
  User               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  HabitCompletion    HabitCompletion[]
  subHabits          SubHabit[]
  SubHabitCompletion SubHabitCompletion[]

  @@index([createdAt])
  @@index([endDate])
  @@index([startDate])
  @@index([status])
  @@index([userId])
}

model HabitCompletion {
  id          Int       @id @default(autoincrement())
  habitId     Int
  userId      String
  date        DateTime
  completed   Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  Habit       Habit     @relation(fields: [habitId], references: [id], onDelete: Cascade)
  User        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, habitId, date])
  @@index([completed])
  @@index([date])
  @@index([habitId])
  @@index([userId])
}

model Project {
  id             Int             @id @default(autoincrement())
  userId         String
  name           String
  description    String?
  status         ProjectStatus   @default(active)
  startDate      DateTime?
  targetDate     DateTime?
  createdAt      DateTime        @default(now())
  User            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  CodingCourse    CodingCourse[]
  TradingCourse   TradingCourse[]

  @@index([status])
  @@index([userId])
}

model TaskProject {
  id          Int       @id @default(autoincrement())
  userId      String
  name        String
  description String?
  status      ProjectStatus @default(active)
  startDate   DateTime?
  targetDate  DateTime?
  createdAt   DateTime  @default(now())
  User        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]

  @@index([status])
  @@index([userId])
}

model Review {
  id            Int      @id @default(autoincrement())
  userId        String
  weekStartDate DateTime
  wins          String
  mistakes      String
  nextWeekGoals String
  metrics       Json?
  createdAt     DateTime @default(now())
  User          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartDate])
  @@index([userId])
  @@index([weekStartDate])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Settings {
  id        Int      @id @default(autoincrement())
  userId    String
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, key])
  @@index([userId])
}

model SubHabit {
  id                 Int                  @id @default(autoincrement())
  habitId            Int
  name               String
  order              Int                  @default(0)
  createdAt          DateTime             @default(now())
  habit              Habit                @relation(fields: [habitId], references: [id], onDelete: Cascade)
  SubHabitCompletion SubHabitCompletion[]

  @@index([habitId])
  @@index([order])
}

model SubHabitCompletion {
  id          Int       @id @default(autoincrement())
  subHabitId  Int
  habitId     Int
  userId      String
  date        DateTime
  completed   Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  Habit       Habit     @relation(fields: [habitId], references: [id], onDelete: Cascade)
  SubHabit    SubHabit  @relation(fields: [subHabitId], references: [id], onDelete: Cascade)
  User        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, subHabitId, date])
  @@index([completed])
  @@index([date])
  @@index([habitId])
  @@index([subHabitId])
  @@index([userId])
}

model Task {
  id            Int         @id @default(autoincrement())
  userId        String
  title         String
  type          TaskType
  taskProjectId Int?
  completed     Boolean     @default(false)
  scheduledDate DateTime?
  completedAt   DateTime?
  createdAt     DateTime    @default(now())
  taskProject   TaskProject? @relation(fields: [taskProjectId], references: [id])
  User          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([completed])
  @@index([taskProjectId])
  @@index([scheduledDate])
  @@index([type])
  @@index([userId])
}

model Trade {
  id        Int      @id @default(autoincrement())
  userId    String
  date      DateTime
  symbol    String
  setup     String
  entry     Float
  exit      Float
  quantity  Int
  pnl       Float
  emotion   String?
  notes     String?
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([symbol])
  @@index([userId])
}

model TradingCourse {
  id                  Int                   @id @default(autoincrement())
  userId              String
  name                String
  description         String?
  projectId           Int?
  createdAt           DateTime              @default(now())
  startDate           DateTime?
  targetDate          DateTime?
  User                User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  project             Project?               @relation(fields: [projectId], references: [id])
  modules             TradingCourseModule[]

  @@index([createdAt])
  @@index([userId])
  @@index([projectId])
}

model TradingCourseModule {
  id            Int           @id @default(autoincrement())
  courseId      Int
  name          String
  order         Int
  completed     Boolean       @default(false)
  completedAt   DateTime?
  scheduledDate DateTime?
  course         TradingCourse @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([completed])
  @@index([courseId])
  @@index([scheduledDate])
}

model User {
  id                 String               @id
  name               String?
  email              String               @unique
  emailVerified      DateTime?
  password           String?
  image              String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime
  Account            Account[]
  CodingCourse       CodingCourse[]
  FitnessLog         FitnessLog[]
  Goal               Goal[]
  Habit              Habit[]
  HabitCompletion    HabitCompletion[]
  Project            Project[]
  TaskProject        TaskProject[]
  Review             Review[]
  Session            Session[]
  Settings           Settings[]
  SubHabitCompletion SubHabitCompletion[]
  Task               Task[]
  Trade              Trade[]
  TradingCourse      TradingCourse[]

  @@index([email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum GoalStatus {
  active
  completed
  paused
}

enum HabitFrequency {
  daily
  weekly
  custom
}

enum HabitStatus {
  active
  paused
}

enum ProjectStatus {
  active
  completed
  paused
}

enum TaskType {
  DeepWork
  Gym
  TradingPractice
  Coding
  Review
  Other
}
